{
  "name": "thermwatch",
  "version": "1.0.0",
  "description": "A comprehensive full functioning webapp for monitoring temperature of high value assets located inside plants.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "npm start --prefix client",
